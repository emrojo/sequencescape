<% submenu.options.each do |option| -%>
  <% if option[:params] -%>
    <% add :menu, option[:label] => url_for(option[:params]) -%>
  <% elsif option[:url] -%>
    <% add :menu, option[:label] => url -%>
  <% elsif option[:url_builder] -%>
    <% add :menu, option[:label] => (option[:url_builder]).call(option[:url_builder_params]) -%>
  <% end -%>
<% end -%>