<h1>Listing tasks</h1>

<table>
  <tr>
  </tr>

<% @tasks.each do |task| -%>
  <tr>
  <td><%= task.name %></td>
  <td><%= task.workflow.name %></td>
    <td><%= link_to 'Show', task_path(task) %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task_path(task), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end -%>
</table>

<br />

<%= link_to 'New task', new_task_path %>
