<%= form_for(@project) do |f| %>
  <%= f.error_messages %>

  <%= form_collection(f.label(:name, nil, :class => 'required'), f.text_field(:name, :class=>'form-control' ) ) %>

  <%= render(:partial => 'shared/metadata/edit/project', :locals => { :project => @project }) %>

  <div class="form-inline center-text">
  <% unless @project.new_record? %>
    <%= submit_tag :project, :value => "Update", :class => 'form-control' %> or <%= link_to "cancel", project_path(@project) %>
  <% else %>
    <%= submit_tag :project, :value => "Create", :class => 'form-control' %> or <%= link_to "cancel", projects_path %>
  <% end %>
  </div>

<% end %>
