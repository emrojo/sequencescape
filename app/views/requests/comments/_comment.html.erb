<div id="commentBox">
  <div id='left'>
    <%= comment.description %>
  </div>
  <div id='right'>
    <% unless comment.user.nil? %>
      Added by <%= comment.user.try(:login)||"Unknown user" %> <%= comment.created_at.to_formatted_s(:short)%> &nbsp;
      <% if (current_user.id == comment.user.try(:id)) || current_user.administrator? %>
        <%= link_to image_tag("delete.png", :alt => "Delete", :title => "Delete"), :update => "request_annotations_#{commentable.id}",
            :url => { :action => "destroy", :id => comment.id }, :method => :delete, :remote => true  %>
      <% end %>

    <% else %>
      Added on <%= comment.created_at.to_formatted_s(:short)%> &nbsp;
      <% if current_user.administrator? %>
        <%= link_to image_tag("delete.png", :alt => "Delete", :title => "Delete"), :update => "request_annotations_#{commentable.id}",
            :url => { :action => "destroy", :id => comment.id }, :method => :delete, :remote => true  %>
      <% end %>
    <% end %>

  </div>
</div>
